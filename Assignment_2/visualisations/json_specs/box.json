{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "data": {
    "url": "./visualisations/datasets/melb_property_data.csv"
  },
  "title": {
    "text": "Property Sale Price Ranges",
    "font": "Georgia",
    "fontSize": 25,
    "anchor": "start",
    "offset": 75
  },
  "background": "#fbfbe5",
  "width": 380,
  "height": 430,
  "params": [
    {
      "name": "councilAreaSelection",
      "value": "Manningham",
      "bind": {
        "input": "select",
        "options": [
          null,
          "Banyule",
          "Bayside",
          "Boroondara",
          "Brimbank",
          "Cardinia",
          "Casey",
          "Darebin",
          "Frankston",
          "Glen Eira",
          "Greater Dandenong",
          "Hobsons Bay",
          "Hume",
          "Knox",
          "Macedon Ranges",
          "Manningham",
          "Maribyrnong",
          "Maroondah",
          "Melbourne",
          "Melton",
          "Monash",
          "Moonee Valley",
          "Moorabool",
          "Moreland",
          "Nillumbik",
          "Port Phillip",
          "Stonnington",
          "Whitehorse",
          "Whittlesea",
          "Wyndham",
          "Yarra",
          "Yarra Ranges"
        ],
        "labels": [
          "Show all",
          "Banyule",
          "Bayside",
          "Boroondara",
          "Brimbank",
          "Cardinia",
          "Casey",
          "Darebin",
          "Frankston",
          "Glen Eira",
          "Greater Dandenong",
          "Hobsons Bay",
          "Hume",
          "Knox",
          "Macedon Ranges",
          "Manningham",
          "Maribyrnong",
          "Maroondah",
          "Melbourne",
          "Melton",
          "Monash",
          "Moonee Valley",
          "Moorabool",
          "Moreland",
          "Nillumbik",
          "Port Phillip",
          "Stonnington",
          "Whitehorse",
          "Whittlesea",
          "Wyndham",
          "Yarra",
          "Yarra Ranges"
        ],
        "name": "Council Area Selection: "
      }
    }
  ],
  "transform": [
    {
      "filter": "councilAreaSelection == null || datum['CouncilArea'] === councilAreaSelection"
    },
    {
      "filter": {
        "field": "Date",
        "valid": true
      }
    },
    {
      "timeUnit": "yearmonth",
      "field": "Date",
      "as": "YearMonth"
    }
  ],
  "mark": {
    "type": "bar",
    "width": 15,
    "color": "#225ea8"
  },
  "encoding": {
    "x": {
      "field": "YearMonth",
      "type": "temporal",
      "axis": {
        "title": "Date",
        "format": "%b %Y"
      },
      "sort": {
        "field": "YearMonth"
      }
    },
    "y": {
      "aggregate": "min",
      "field": "Price",
      "title": "Price Range",
      "axis": {
        "title": "Price ($)"
      }
    },
    "y2": {
      "aggregate": "max",
      "field": "Price"
    },
    "tooltip": [
      {
        "field": "Date",
        "type": "temporal",
        "title": "Date",
        "format": "%b %Y"
      },
      {
        "aggregate": "min",
        "field": "Price",
        "title": "Lowest Sale Price",
        "format": "$,.0f"
      },
      {
        "aggregate": "max",
        "field": "Price",
        "title": "Highest Sale Price",
        "format": "$,.0f"
      }
    ]
  }
}