{
    "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
    "description": "A scatterplot showing body mass and flipper lengths of penguins.",
    "data": {
        "url": "./visualisations/datasets/melb_property_data.csv"
    },
    "width": 330,
    "height": 430,
    "mark": "circle",
    "background": "#fbfbe5",
    "title": {
        "text": "Sale Price, Distance, Land Size",
        "font": "Math",
        "fontSize": 25,
        "anchor": "start"
    },
    "params": [
        {
            "name": "councilAreaSelection",
            "bind": {
                "input": "select",
                "options": [
                    null,
                    "Banyule",
                    "Bayside",
                    "Boroondara",
                    "Brimbank",
                    "Cardinia",
                    "Casey",
                    "Darebin",
                    "Frankston",
                    "Glen Eira",
                    "Greater Dandenong",
                    "Hobsons Bay",
                    "Hume",
                    "Knox",
                    "Macedon Ranges",
                    "Manningham",
                    "Maribyrnong",
                    "Maroondah",
                    "Melbourne",
                    "Melton",
                    "Monash",
                    "Moonee Valley",
                    "Moorabool",
                    "Moreland",
                    "Nillumbik",
                    "Port Phillip",
                    "Stonnington",
                    "Whitehorse",
                    "Whittlesea",
                    "Wyndham",
                    "Yarra",
                    "Yarra Ranges"
                ],
                "labels": [
                    "Show all",
                    "Banyule",
                    "Bayside",
                    "Boroondara",
                    "Brimbank",
                    "Cardinia",
                    "Casey",
                    "Darebin",
                    "Frankston",
                    "Glen Eira",
                    "Greater Dandenong",
                    "Hobsons Bay",
                    "Hume",
                    "Knox",
                    "Macedon Ranges",
                    "Manningham",
                    "Maribyrnong",
                    "Maroondah",
                    "Melbourne",
                    "Melton",
                    "Monash",
                    "Moonee Valley",
                    "Moorabool",
                    "Moreland",
                    "Nillumbik",
                    "Port Phillip",
                    "Stonnington",
                    "Whitehorse",
                    "Whittlesea",
                    "Wyndham",
                    "Yarra",
                    "Yarra Ranges"
                ],
                "name": "Council Area Selection: "
            }
        }
    ],
    "transform": [
        {
            "calculate": "datum['Landsize'] === '0' ? 'No data' : datum['Landsize'] < 300 ? '0m\u00B2-300m\u00B2' : datum['Landsize'] < 500 ? '300m\u00B2-500m\u00B2' : datum['Landsize'] < 700 ? '500m\u00B2-700m\u00B2' : '700m\u00B2+'",
            "as": "Landsize Bin"
        },
        {
            "calculate": "datum['Price'] === 0 ? 'No data' :  format(datum['Price'], '$,.0f')",
            "as": "Price Formatted"
        },
        {
            "calculate": "datum['Landsize'] === '0' ? 'No data' : datum['Landsize'] == 0 ? 'No data' : format(datum['Landsize'], ',.0f') + 'm\u00B2'",
            "as": "Landsize Formatted"
        },
        {
            "calculate": "datum['Distance'] === '0' ? 'No data' : datum['Distance'] == 0 ? 'No data' : format(datum['Distance'], ',.1f') + 'km'",
            "as": "Distance Formatted"
        },
        {
            "filter": "councilAreaSelection == null || datum['CouncilArea'] === councilAreaSelection"
        }
    ],
    "encoding": {
        "tooltip": [
            {
                "field": "Distance Formatted",
                "type": "nominal",
                "title": "Distance from CBD"
            },
            {
                "field": "Price Formatted",
                "type": "nominal",
                "title": "Sale Price"
            },
            {
                "field": "Landsize Formatted",
                "type": "nominal",
                "title": "Land Size"
            }
        ],
        "x": {
            "field": "Distance",
            "type": "quantitative",
            "scale": {
                "zero": true
            },
            "title": "Distance from CBD (km)"
        },
        "y": {
            "field": "Price",
            "type": "quantitative",
            "scale": {
                "zero": false
            },
            "title": "Price ($)"
        },
        "color": {
            "field": "Landsize Bin",
            "type": "ordinal",
            "scale": {
                "domain": [
                    "No data",
                    "0m\u00B2-300m\u00B2",
                    "300m\u00B2-500m\u00B2",
                    "500m\u00B2-700m\u00B2",
                    "700m\u00B2+"
                ],
                "range": [
                    "#cccccc",
                    "#a1dab4",
                    "#41b6c4",
                    "#225ea8",
                    "#1C3144"
                ]
            },
            "sort": [
                "No data",
                "0m\u00B2-300m\u00B2",
                "300m\u00B2-500m\u00B2",
                "500m\u00B2-700m\u00B2",
                "700m\u00B2+"
            ],
            "legend": {
                "title": "Land Size"
            }
        }
    }
}