{
    "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
    "data": {
        "url": "./visualisations/datasets/melb_property_data.csv"
    },
    "title": {
        "text": "Land Size and Building Area",
        "font": "Georgia",
        "fontSize": 25,
        "anchor": "start"
    },
    "background": "#fbfbe5",
    "description": "A scatterplot showing body mass and flipper lengths of penguins.",
    "params": [
        {
            "name": "priceFilter",
            "value": 8.5,
            "bind": {
                "input": "range",
                "min": 0.2,
                "max": 8.5,
                "step": 0.1,
                "name": "Maximum Sale Price (million $): "
            }
        }
    ],
    "transform": [
        {
            "filter": {
                "and": [
                    {
                        "field": "BuildingArea",
                        "lte": 500
                    },
                    {
                        "field": "BuildingArea",
                        "gte": 10
                    },
                    {
                        "field": "Landsize",
                        "gte": 10
                    },
                    {
                        "field": "Landsize",
                        "lte": 500
                    }
                ]
            }
        },
        {
            "filter": "datum['Price'] <= priceFilter * 1000000"
        }
    ],
    "mark": "rect",
    "width": 330,
    "height": 430,
    "encoding": {
        "tooltip": [
            {
                "aggregate": "count",
                "type": "quantitative",
                "title": "Number of Sales"
            }
        ],
        "x": {
            "bin": {
                "maxbins": 25
            },
            "field": "BuildingArea",
            "type": "quantitative",
            "title": "Building Area (m\u00B2)"
        },
        "y": {
            "bin": {
                "maxbins": 25
            },
            "field": "Landsize",
            "type": "quantitative",
            "title": "Land Size (m\u00B2)"
        },
        "color": {
            "title": "Number of Sales",
            "aggregate": "count",
            "type": "quantitative",
            "scale": {
                "type": "linear",
                "range": [
                    "#a1dab4",
                    "#41b6c4",
                    "#225ea8",
                    "#1C3144"
                ]
            }
        },
        "stroke": {
            "value": "grey"
        }
    },
    "config": {
        "view": {
            "stroke": "transparent"
        }
    }
}