{
    "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
    "data": {
        "url": "./visualisations/datasets/melb_property_data.csv"
    },
    "background": "#fbfbe5",
    "description": "A scatterplot showing body mass and flipper lengths of penguins.",
    "transform": [
        {
            "filter": {
                "and": [
                    {
                        "field": "BuildingArea",
                        "lte": 500
                    },
                    {
                        "field": "BuildingArea",
                        "gte": 10
                    },
                    {
                        "field": "Landsize",
                        "gte": 10
                    },
                    {
                        "field": "Landsize",
                        "lte": 500
                    }
                ]
            }
        }
    ],
    "mark": "rect",
    "width": 500,
    "height": 500,
    "encoding": {
        "tooltip": [
            {
                "aggregate": "count",
                "type": "quantitative",
                "title": "Number of Sales"
            }
        ],
        "x": {
            "bin": {
                "maxbins": 25
            },
            "field": "BuildingArea",
            "type": "quantitative"
        },
        "y": {
            "bin": {
                "maxbins": 25
            },
            "field": "Landsize",
            "type": "quantitative"
        },
        "color": {
            "title": "Number of Sales",
            "aggregate": "count",
            "type": "quantitative",
            "scale": {
                "type": "linear",
                "range": [
                    "#a1dab4",
                    "#1C3144"
                ]
            }
        }
    },
    "config": {
        "view": {
            "stroke": "transparent"
        }
    }
}